= form_for @post do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  -if @post.version.format == 'html'
    :javascript
      var convert_path = '#{convert_to_haml_post_path(@post)}';
    #convert_to_haml
      %button{:disabled => true} Convert to haml
  .field
    = f.text_area :content, :cols => nil
  .actions
    = f.submit 'Save'
